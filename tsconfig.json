{
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "target": "es6",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "declaration": true,
        "removeComments": true,
        "strict": true,
        "outDir": "./dist/lib",
        "declarationDir": "./dist/@types",
        "baseUrl": "./",
        "typeRoots": ["./@types", "./node_modules/@types"],
        "paths": {
            "@libs/*": ["src/libs/*"]
        }
    },
    "include": [
        "./src/**/*"
    ],

}